<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
            <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>            
            <title>{% block title %}{% endblock %} - My Webpage</title>          
         {% endblock %}
    </head>
    <body>
        <div id="content">
            {% block content %}
                <div class="page-header text-center">
                    <h2> Legacy Model Files </h2> 
                </div> 
                <div class="container-fluid">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <a class="navbar-brand" href="index.php">HomePage</a>
                            </div>

                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="upload.php">Upload Current Files</a></li>
                                <li><a href="create.php">Create XMI</a></li>                                
                                <li><a href="myUpload.php">Current Database</a></li>
                                <li><a href="search.php">Search</a></li>
                            </ul>
                        </div>
                    </nav>  	


                    <!-- TABLE CONTENTS -->
                
                    <section id = "table">
                        <div class="container-fluid">
                            {#<pre>
                                {{ dump(uploads) }}
                            </pre>#}
                            
                            <table class="table table-bordered table-hover" style="border-collapse:collapse;">
                                <thead>
                                    <tr> 
                                        <th>Filename</th>
                                        <th>Filetype</th>
                                        <th>UserInfo</th>
                                    </tr>
                                </thead>
                                
                                <tbody>
                                    
                                    {% for uploaded in uploads %}
                                        <tr >
                                            <td>{{ uploaded.filename }} &emsp;
                                                <a href="#" data-toggle="tooltip" data-placement="top" title="{{uploaded.description}}">
                                                    <span class="glyphicon glyphicon-info-sign"></span>
                                                </a> &emsp;
                                                <a href="downloadLegacy.php?id={{uploaded.id}}">
                                                    <span class="glyphicon glyphicon-download-alt"></span>
                                                </a>
                                            </td>
                                            <td>{{uploaded.filetype}}</td>
                                            <td>{{uploaded.user}}</td>
                                            
                                        </tr>                                        
                                                                                                
                                    {% endfor %}
                                  
                                </tbody>
                               
                            </table>
                                 
                        </div>
                    </section>
                </div>
            {% endblock %}
        </div>

    </body>
</html>
